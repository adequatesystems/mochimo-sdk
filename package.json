{
  "name": "mochimo",
  "version": "2.0.0",
  "description": "Production-ready Mochimo SDK for cryptocurrency exchange integration - deterministic key generation, transaction creation/signing, and network broadcasting",
  "type": "module",
  "main": "src/index.js",
  "exports": {
    ".": "./src/index.js",
    "./address": "./src/core/address.js",
    "./transaction": "./src/core/transaction.js",
    "./network": "./src/network/broadcast.js",
    "./wots": "./src/core/wots.js",
    "./crypto": "./src/core/crypto.js",
    "./base58": "./src/utils/base58.js"
  },
  "scripts": {
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "test:unit": "node --experimental-vm-modules node_modules/jest/bin/jest.js test/unit",
    "test:integration": "node --experimental-vm-modules node_modules/jest/bin/jest.js test/integration",
    "test:export": "node --input-type=module -e \"import('mochimo').then(m => console.log(`has ${process.argv.slice(1)}:`, typeof m[process.argv.slice(1)]))\"",
    "example:address": "node examples/reference/create-address.js",
    "example:transaction": "node examples/reference/create-transaction.js",
    "example:broadcast": "node examples/reference/broadcast-transaction.js",
    "check:balance": "node examples/reference/check-balance.js",
    "check:mempool": "node examples/reference/check-mempool.js",
    "search:transactions": "node examples/reference/search-transactions.js",
    "send:transaction": "node examples/reference/send-transaction.js"
  },
  "keywords": [
    "mochimo",
    "blockchain",
    "crypto",
    "cryptocurrency",
    "wots",
    "wots+",
    "post-quantum",
    "transaction",
    "sdk"
  ],
  "author": "Adequate Systems",
  "license": "MOCHIMO CRYPTOCURRENCY ENGINE",
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "bs58": "^6.0.0",
    "crc": "^4.3.2"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "jest": "^29.7.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/adequatesystems/mochimo-sdk.git"
  },
  "bugs": {
    "url": "https://github.com/adequatesystems/mochimo-sdk/issues"
  }
}
